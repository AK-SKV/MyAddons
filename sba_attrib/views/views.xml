<?xml version="1.0"?>
<openerp>
    <data>
	<!-- Partner view modification -->
     <record id="view_partner_form_sba_ru" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="type">form</field>
            <field name="inherit_id" ref="account.view_partner_property_form"/>
            <field name="arch" type="xml">
                <field name="street2" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
                <xpath expr="//page[@string='Accounting']/group[1]" position="before">
                    <label for="name_official"/>
                    <group>
                        <field name="name_official" colspan="4" nolabel="1"/>
                        <group>
                            <field name="inn"/>
                            <field name="kpp"/>
                            <field name="ogrn"/>
                            <field name="okpo"/>
                            <field name="ceo"/>
                            <field name="ceo_function"/>
                            <field name="accountant"/>
                        </group>
                        <group>
                            <field name="contract_num"/>
                            <field name="contract_date"/>
                        </group>
                    </group>
                </xpath>
            </field>
        </record>
		<template id="footer_default" inherit_id="website.footer_default" customize_show="True" name="Automatic SBA Footer">
			<xpath expr="//span[@t-field='res_company.name']/span" position="after">
						<span t-field="res_company.ogrn" />
			</xpath>
		</template>

    </data>
</openerp>



